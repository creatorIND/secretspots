<% layout("./common/boilerplate") %>
<main class="error u-center-text">
	<div class="error__header">
		<div class="error__icon">
			<svg
				width="120"
				height="120"
				viewBox="0 0 120 120"
				fill="none"
				xmlns="http://www.w3.org/2000/svg">
				<path
					fill-rule="evenodd"
					clip-rule="evenodd"
					d="M22.35 102.519H97.65C105.35 102.519 110.15 94.1686 106.3 87.5186L68.65 22.4686C64.8 15.8186 55.2 15.8186 51.35 22.4686L13.7 87.5186C9.85 94.1686 14.65 102.519 22.35 102.519ZM60 67.5183C57.25 67.5183 55 65.2683 55 62.5183V52.5183C55 49.7683 57.25 47.5183 60 47.5183C62.75 47.5183 65 49.7683 65 52.5183V62.5183C65 65.2683 62.75 67.5183 60 67.5183ZM55 87.5183H65V77.5183H55V87.5183Z"
